<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.shape.Arc?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafx.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <Button text="Hello!" onAction="#onHelloButtonClick"/>
    <TextField promptText="Imie" fx:id="nameID" style="-fx-max-width: 150"/>
    <TextField promptText="Nazwisko" fx:id="surnameID" style="-fx-max-width: 150"/>
    <Button text="Set Person Data" fx:id="personData" onAction="#getInputData"/>

    <Label fx:id="outName"/>
    <Label fx:id="outSurname"/>

    <Button text="Exit" onAction="#turnOffApplication"/>






</VBox>
